@using MultiTenant.IdentityServerFour.Models.Id4Role
@model IEnumerable<RoleListVM>

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">Role List</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <p><a href="~/Home/CreateRole" class="btn btn-success">Create</a></p>
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <a href="~/home/EditRole?roleId=@item.RoleId"> <li class="list-group-item">@item.RoleName</li></a>
            }
        </ul>

    </div>
    <div class="offset-md-3 offset-md-9">
        <p><a href="~/Home/Index" class="btn btn-primary">Return To Home</a></p>
    </div>
</div>