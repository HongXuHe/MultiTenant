@using MultiTenant.IdentityServerFour.Models.Clients
@model ClientVM
<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">Clients Detials</h2>
    </div>
    <div class="col-md-6 offset-md-3">
        <dl class="dl-horizontal">
            <dt>Client Id</dt>
            <dd>@Model.ClientId</dd>
            <dt>Client Name</dt>
            <dd>@Model.ClientName</dd>
            @if (!string.IsNullOrEmpty(Model.LogoUri))
            {
                <dt>ClientLogo</dt>
                <dd><img src="@Model.LogoUri" /></dd>
            }

        </dl>
    </div>
</div>

