@using MultiTenant.IdentityServerFour.Models.Clients
@using MultiTenant.Shared.Enums;
@model NewClient

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center">Create Client</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="CreateClient" method="post">
            <div class="form-group">
                <label asp-for="ClientName">ClientName</label>
                <input asp-for="ClientName" class="form-control" placeholder="ClientName">
            </div>
            <div class="form-group">
                <label asp-for="ClientSecrets">ClientSecrets</label>
                <input asp-for="ClientSecrets" class="form-control" placeholder="ClientSecrets">
            </div>
            <div class="form-group">
                <label asp-for="AllowedGrantTypes">AllowedGrantTypes</label>
                <select id="selectGrantTypes" asp-for="AllowedGrantTypes"
                        asp-items="Html.GetEnumSelectList<MultiTenantGrantTypes>()"
                        class="form-control">
                </select>
            </div>
            <div id="showHost" class="form-group">
                <label asp-for="ClientHost">ClientHost</label>
                <input asp-for="ClientHost" class="form-control" placeholder="ClientHost">
            </div>
            <div class="form-group">
                <label asp-for="LogoUri">LogoUri</label>
                <input asp-for="LogoUri" class="form-control" placeholder="LogoUri">
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-warning cancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>
</div>